<UserControl x:Class="DubuqueCodeCamp.Scheduler.MainSessionsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"></ColumnDefinition>
      <ColumnDefinition Width="*"></ColumnDefinition>
    </Grid.ColumnDefinitions>

    <!-- Session Buttons -->
    <Grid Grid.Column="0">
      <StackPanel>
        <Button Content="Add Session" Margin="5 25 5 5" Command="{Binding NavigateCommand}" CommandParameter="AddSessionView" />
        <Button>Remove Session</Button>
      </StackPanel>
    </Grid>

    <!-- Sessions Listbox -->
    <StackPanel Grid.Column="1">
      <TextBlock FontWeight="Bold" Margin="0 0 0 5">SessionsDisplayer</TextBlock>
      <ListBox ItemsSource="{Binding Sessions, UpdateSourceTrigger=PropertyChanged}" ScrollViewer.VerticalScrollBarVisibility="Visible" MaxHeight="250"  />
    </StackPanel>
  </Grid>
</UserControl>
