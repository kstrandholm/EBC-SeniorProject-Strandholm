<UserControl x:Class="DubuqueCodeCamp.Scheduler.SessionsDisplayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
  <Grid>

    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="Auto"></ColumnDefinition>
      <ColumnDefinition Width="*"></ColumnDefinition>
    </Grid.ColumnDefinitions>

    <Grid Grid.Column="0">

      <Grid.RowDefinitions>
        <RowDefinition Height="*"></RowDefinition>
        <RowDefinition Height="*"></RowDefinition>
      </Grid.RowDefinitions>

      <StackPanel Grid.Row="0">
        <Button Margin="5 25 5 5">Add Session</Button>
        <Button>Remove Session</Button>
      </StackPanel>

      <StackPanel Grid.Row="1" VerticalAlignment="Bottom" Margin="0 0 0 5">
        <Button>Save SessionsDisplayer</Button>
      </StackPanel>

    </Grid>

    <StackPanel Grid.Column="1">

      <TextBlock FontWeight="Bold" Margin="0 0 0 5">SessionsDisplayer</TextBlock>

      <ListBox ItemsSource="{Binding Sessions, UpdateSourceTrigger=PropertyChanged}" ScrollViewer.VerticalScrollBarVisibility="Visible" MaxHeight="250"  />

    </StackPanel>
  </Grid>
</UserControl>
