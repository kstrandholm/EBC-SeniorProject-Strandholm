<Window x:Class="DubuqueCodeCampScheduler.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DubuqueCodeCampScheduler"
        mc:Ignorable="d"
        Title="MainWindow" Height="486.885" Width="598.975">
    <Grid>

    <!-- Divide the window into 3 vertical segments -->
    <Grid.RowDefinitions>
        <RowDefinition Height="*"></RowDefinition>
        <RowDefinition Height="*"></RowDefinition>
        <RowDefinition Height="*"></RowDefinition>
    </Grid.RowDefinitions>

    <!-- The main content will go in the middle of the window -->
      <StackPanel Grid.Row="1">
      <Grid>

        <Grid.RowDefinitions>
          <RowDefinition Height="*"></RowDefinition>
          <RowDefinition Height="*"></RowDefinition>
          <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Column="0"></TextBlock>
        
      </Grid>

    </StackPanel>
      
    </Grid>
</Window>
